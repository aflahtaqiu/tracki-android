<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >

    <Button
        android:id="@+id/button4"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:background="@drawable/button_register_login"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/button_tamu"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_login_tamu"
        android:text="Masuk Sebagai Tamu"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/button_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:elevation="3dp"
        android:src="@drawable/g"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="361dp" />

    <Button
        android:id="@+id/button_google"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_login_google"
        android:text=" Masuk Dengan Google"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/button_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_facebook"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_login_facebook"
        android:text="Masuk Dengan Facebook"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="407dp"
        android:layout_height="31dp"
        android:background="#e6e6e6"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="103dp"
            android:text="Belum punya akun? "
            android:textColor="#585858"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textMasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="Daftar"
            android:textColor="@color/colorTracki"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/register_input_nama5"
        android:layout_width="326dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Email"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/register_input_sandi4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/register_input_sandi4"
        android:layout_width="329dp"
        android:layout_height="51dp"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Kata Sandi"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="147dp"
        android:layout_height="27dp"
        android:text="Lupa Password"
        android:textAlignment="textEnd"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="182dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Atau"
        app:layout_constraintBottom_toTopOf="@+id/button_tamu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="176dp"
        android:layout_height="74dp"
        android:src="@drawable/tracki1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="6dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:src="@drawable/f"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="418dp" />


</android.support.constraint.ConstraintLayout>