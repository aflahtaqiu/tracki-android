<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativreLayout_detailMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_menu_detailMenu"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/img_menu_default"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="3dp"
            android:layout_marginBottom="11dp"/>

        <TextView
            android:id="@+id/tv_namaMenu_detailMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:background="@color/colorWhite"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Nama Menu"/>

        <TextView
            android:id="@+id/tv_kategoriMenu_detailMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:background="@color/colorWhite"
            android:layout_margin="5dp"
            android:textSize="18dp"
            android:text="Kategori Makanan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_local_offer"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:isScrollContainer="true"
                android:layout_margin="5dp"
                android:text="Rp. "
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_hargaMenu_detailMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_margin="5dp"
                android:text="Harga Menu"/>
        </LinearLayout>

        <TextView
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Detail"/>

        <TextView
            android:id="@+id/tv-detailMenu_detailMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:isScrollContainer="true"
            android:background="@color/colorWhite"
            android:text="Detail Menunya"/>

    </LinearLayout>
</RelativeLayout>