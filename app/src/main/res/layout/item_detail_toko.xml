<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_logo_detail_toko"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_namaToko_detailToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excelso"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@id/iv_logo_detail_toko"
            app:layout_constraintStart_toEndOf="@id/iv_logo_detail_toko" />

        <TextView
            android:id="@+id/tv_tipeToko_detailToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Toko"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_logo_detail_toko"
            app:layout_constraintTop_toBottomOf="@id/tv_namaToko_detailToko" />

        <RatingBar
            android:id="@+id/ratingToko_detailToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.5"
            android:layout_marginTop="8dp"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_logo_detail_toko"
            app:layout_constraintTop_toBottomOf="@id/tv_tipeToko_detailToko"/>

        <Button
            android:id="@+id/btn_reviewToko_detailToko"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/button_simpan"
            android:text="Lihat ulasan"
            android:textAllCaps="true"
            android:padding="8dp"
            android:textColor="@color/colorTracki"
            android:textSize="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ratingToko_detailToko"/>

        <ImageView
            android:id="@+id/icon_lokasi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/button_simpan"
            android:src="@drawable/ic_location_on"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_reviewToko_detailToko"/>

        <TextView
            android:id="@+id/tv_lokasiToko_detailToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Toko"
            android:textSize="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toEndOf="@id/icon_lokasi"
            app:layout_constraintTop_toTopOf="@id/icon_lokasi"/>

        <ImageView
            android:id="@+id/icon_waktu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/button_simpan"
            android:src="@drawable/ic_access_time"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_lokasi"/>

        <TextView
            android:id="@+id/tv_jamBukaToko_detailToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:textSize="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toEndOf="@id/icon_waktu"
            app:layout_constraintTop_toTopOf="@id/icon_waktu"/>

        <TextView
            android:id="@+id/garis_penghubung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_jamBukaToko_detailToko"
            app:layout_constraintTop_toTopOf="@id/icon_waktu"/>

        <TextView
            android:id="@+id/tv_jamTutupToko_detailToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.00"
            android:maxLength="5"
            android:textSize="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@id/garis_penghubung"
            app:layout_constraintTop_toTopOf="@id/icon_waktu"/>

        <ImageView
            android:id="@+id/icon_telfon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/button_simpan"
            android:src="@drawable/ic_local_phone"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_waktu"/>

        <TextView
            android:id="@+id/tv_phoneToko_detailToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Toko"
            android:textSize="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:textColor="#2a43ff"
            app:layout_constraintStart_toEndOf="@id/icon_telfon"
            app:layout_constraintTop_toTopOf="@id/icon_telfon"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
